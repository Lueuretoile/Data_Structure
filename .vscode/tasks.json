{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build DS_HW3.cpp",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "DS_HW3.cpp",
        "-o",
        "DS_HW3.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "偵錯工具產生的工作。"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe 建置使用中檔案",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": "build",
      "detail": "編譯器: cl.exe"
    }
  ],
  "version": "2.0.0"
}